{
    "openapi": "3.0.2",
    "info": {
        "title": "Laravel",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http:\/\/localhost"
        }
    ],
    "paths": {
        "\/api\/catalog\/product\/list": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Display a listing of the resource.",
                "parameters": [
                    {
                        "name": "category slug",
                        "in": "query",
                        "description": "category slug",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "search_query",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "sort_mode",
                        "in": "query",
                        "description": "0 - price asc, 1 - price desc",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "filters",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#\/components\/responses\/"
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/catalog\/product\/details": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Show the specified resource.",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "query",
                        "description": "slug product",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/FullInfoProduct"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/categories\/list": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Display categories.",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/Category"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/categories\/single": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Display Categories through slug.",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "query",
                        "description": "slug category",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/Category"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Category": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "parent_id": {
                        "type": "string"
                    }
                }
            },
            "PaginatorLinks": {
                "type": "object",
                "properties": {
                    "first": {
                        "type": "string"
                    },
                    "last": {
                        "type": "string"
                    },
                    "prev": {
                        "type": "string",
                        "nullable": true
                    },
                    "next": {
                        "type": "string",
                        "nullable": true
                    }
                }
            },
            "PaginatorMeta": {
                "type": "object",
                "properties": {
                    "current_page": {
                        "type": "integer"
                    },
                    "from": {
                        "type": "integer"
                    },
                    "last_page": {
                        "type": "integer"
                    },
                    "path": {
                        "type": "string"
                    },
                    "per_page": {
                        "type": "integer"
                    },
                    "to": {
                        "type": "integer"
                    },
                    "total": {
                        "type": "integer"
                    },
                    "links": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "url": {
                                    "type": "string",
                                    "nullable": true
                                },
                                "label": {
                                    "type": "string"
                                },
                                "active": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "Filter": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "integer"
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "value": {
                                    "type": "string"
                                },
                                "isSelected": {
                                    "type": "boolean"
                                },
                                "productCount": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            },
            "FullInfoProduct": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "article_number": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "price": {
                        "type": "string"
                    },
                    "discount_price": {
                        "type": "string"
                    },
                    "is_sale": {
                        "type": "boolean"
                    },
                    "is_new": {
                        "type": "boolean"
                    },
                    "category": {
                        "$ref": "#\/components\/schemas\/Category"
                    },
                    "attributes": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "colors": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "color_name": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "size": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "color_name": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "path": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "brand": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "brand_name": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "PreviewProduct": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "price": {
                        "type": "string"
                    },
                    "discount_price": {
                        "type": "string"
                    },
                    "is_sale": {
                        "type": "boolean"
                    },
                    "is_new": {
                        "type": "boolean"
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "path": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "responses": {
            "": {
                "description": "Successful response",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#\/components\/schemas\/PreviewProduct"
                                    }
                                },
                                "links": {
                                    "$ref": "#\/components\/schemas\/PaginatorLinks"
                                },
                                "meta": {
                                    "$ref": "#\/components\/schemas\/PaginatorMeta"
                                },
                                "filters": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#\/components\/schemas\/Filter"
                                    }
                                },
                                "category": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#\/components\/schemas\/Category"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Products",
            "description": "Products logo-shop"
        },
        {
            "name": "Categories",
            "description": "Categories products logo-shop"
        }
    ]
}
